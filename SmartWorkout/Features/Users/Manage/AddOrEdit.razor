@page "/user/add"
@page "/user/edit/{UserId:guid}"
<h1>@Title User</h1>

@if (IsLoading)
{
    <p>Loading user data...</p>
}
else
{
    if (User == null)
    {
        <p>User not found...</p>
        return;
    }

    <EditForm Model="@User" OnValidSubmit="@SaveUser">
        <div class="form-group">
            <label>Email :</label>
            <div>
                <InputText @bind-Value="@User.Email" class="form-control col-sm-3" />
                <ValidationMessage For="@(() => User.Email)" />
            </div>
        </div>
        <div class="form-group">
            <label>Name :</label>
            <div>
                <InputText @bind-Value="@User.Name" class="form-control col-sm-3" />
                <ValidationMessage For="@(() => User.Name)" />
            </div>
        </div>
        <div class="form-group">
            <label>Password :</label>
            <div>
                <InputText @bind-Value="@User.Password" class="form-control col-sm-3" />
                <ValidationMessage For="@(() => User.Password)" />
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </EditForm>

}